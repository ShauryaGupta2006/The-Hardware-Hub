<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950 text-white min-h-screen">

    <!-- Page Wrapper -->
    <div class="max-w-5xl mx-auto px-6 py-10">

        <!-- Heading -->
        <h1 class="text-3xl font-bold mb-8">ðŸ›’ Your Cart</h1>

        <!-- Cart Items -->
        <div class="space-y-6">

            <% user.cart.forEach(function(product){ %>

                <div class="bg-zinc-900 rounded-2xl p-6 flex justify-between items-center shadow-lg hover:shadow-xl transition">

                    <!-- Product Info -->
                    <div>
                        <h2 class="text-xl font-semibold"><%= product.name %></h2>
                        <p class="text-zinc-400 mt-1">Price: â‚¹<%= product.price %></p>
                    </div>

                    <!-- Remove Button -->

                    <form action="/removeitem/<%=product._id%>" method="post">
                        <button type = "submit" class="bg-red-600 hover:bg-red-500 px-4 py-2 rounded-xl text-sm font-semibold transition">
                            Remove
                        </button>

                    </form>
                    

                </div>

            <% }) %>

        </div>

        <!-- Cart Summary -->
        <div class="mt-10 bg-zinc-900 rounded-2xl p-6 shadow-lg">

            <div class="flex justify-between text-lg font-semibold">
                <span>Total Items:</span>
                <span><%= user.cart.length %></span>
            </div>

            <button class="mt-6 w-full bg-blue-600 hover:bg-blue-500 py-3 rounded-2xl font-bold text-lg transition shadow-lg shadow-blue-600/30">
                Proceed to Checkout
            </button>

        </div>

    </div>

</body>
</html>